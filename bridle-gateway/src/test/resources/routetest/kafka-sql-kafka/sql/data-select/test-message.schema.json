{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Message",
  "type": "object",
  "properties": {
    "system": {
      "type": "object",
      "properties": {
        "correlationId": {
          "type": "string",
          "format": "uuid"
        }
      },
      "required": [
        "correlationId"
      ]
    },
    "data": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "pattern": "^[0-9]{4}$"
        }
      },
      "required": [
        "userId"
      ]
    }
  },
  "required": [
    "system",
    "data"
  ]
}